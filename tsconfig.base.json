{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2022"],
        "module": "nodenext",
        "noImplicitReturns": true,
        "outDir": "lib",
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2022",
        "typeRoots": ["./types", "./node_modules/@types"],
    }
}
